# ============================================================================
# Chronicle Environment Variables
# ============================================================================
# Copy this file to .env and fill in your values.
# NEVER commit .env to version control.
# ============================================================================

# --- Application ---
PORT=8080
ENV=development
BASE_URL=http://localhost:8080
LOG_LEVEL=debug

# --- Database (MariaDB) ---
# Individual vars are preferred. DATABASE_URL overrides all if set.
DB_HOST=localhost
DB_PORT=3306
DB_USER=chronicle
DB_PASSWORD=chronicle
DB_NAME=chronicle
# DATABASE_URL=chronicle:chronicle@tcp(localhost:3306)/chronicle?parseTime=true

# --- Redis ---
REDIS_URL=redis://localhost:6379

# --- Security ---
# Generate with: openssl rand -base64 32
SECRET_KEY=change-me-generate-a-real-secret-key

# --- Sessions ---
SESSION_TTL=720h

# --- File Uploads ---
MAX_UPLOAD_SIZE=10MB

# --- Docker (used by docker-compose.yml) ---
MYSQL_ROOT_PASSWORD=rootsecret
MYSQL_PASSWORD=chronicle  # must match DB_PASSWORD above
